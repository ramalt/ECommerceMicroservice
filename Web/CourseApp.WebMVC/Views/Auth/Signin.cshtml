@{
    ViewData["Title"] = "Signin";
}
@model CourseApp.WebMVC.Models.SigninInput


<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="row g-3" asp-controller="auth" asp-action="signin" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="example@mail.com">
                        <span asp-asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="şifreniz">
                    </div>
                    <span asp-asp-validation-for="Password" class="text-danger"></span>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe"type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                        <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1"></label>
                    </div>
                    <button type="submit" class="btn btn-dark">Giriş</button>
                </form>
            </div>
        </div>
    </div>
</div>
